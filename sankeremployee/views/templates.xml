                            <thead style="border: 1px solid grey">
                                <th class="text-center" style="width: 1%; border: 1px solid black">#</th>
                                <th class="text-center" style="width: 10%; border: 1px solid black">Name</th>
                                <th class="text-center" style="width: 9%; border: 1px solid black">Designation</th>
                                <th class="text-center" style="width: 5%; border: 1px solid black">No. of days worked
                                    during the month
                                </th>
                                <th class="text-center" style="width: 5%; border: 1px solid black">No. of days on leave
                                    during the month
                                </th>
                                <th class="text-center" style="width: 5%; border: 1px solid black">No. of days for which
