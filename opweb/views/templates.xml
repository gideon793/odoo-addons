                                            <h2 id="patient_name" class="pt-2 pl-2">Patient Name</h2>
                                            <h3 id="patient_details" class="pl-2">Registration No</h3>
                                            <h4 id="patient_age" class="pl-2">Registration No</h4>
                                            <h5 id = "diagnosis">Diagnosis</h5>
                                            <div hidden="True" id="form_pat_id"></div>
                                            <button type="button" id="old_pres_listCollapse" class="btn btn-primary">
                                                <i class="fa fa-bars"></i>
                                            </button>

                                        </div>
                                        <div class="main_card">Prescription</div>
                                        <div class="presMain" id="presMain">
                                            <div id="prescriptionHeader" class="prescriptionHeader">
                                                <span style="width: 35%">Medication</span><!--
                                             --><span style="width: 5%">Total</span><!--
                                             --><span style="width: 5%">No.</span><!--
                                             --><span style="width: 10%">Frequency</span><!--
                                             --><span style="width: 5%">Days</span><!--
                                             --><span style="width: 40%">Special</span>
                                            </div>
                                            <div class="presLine pl-0 ml-0">
                                                <div class="presLineDetails">
                                                    <div id="mainMed" class="mainMed">
                                                        <i class="fa fa-minus delMed"></i>
                                                        <label class="sr-only" for="1_medicineOrder" id="1_medicineLabel">1</label>
                                                        <span id="medIndex" class="presMedNo">1</span>
                                                        <input list="medicines" name="1_medicineOrder" id="1_medicineOrder" class="form-control rounded p-0 presMedName"/>
                                                        <datalist id="medicines">
                                                            <t t-foreach="medications" t-as="medication">
                                                                <option t-attf-value="#{medication.name}" t-attf-id="#{medication.id}" />
                                                            </t>
                                                        </datalist>
                                                        <label class="sr-only" for="1_medicineTotal" id="medicineTotal1">Total Order</label>
                                                        <input name="medicineTotal" type="number" class="form-control col-2 rounded text-center medTotal" id="medicineTotal1"/>
                                                    </div>
                                                    <div class="medicineRowContainer" id="medicineDetails">
                                                        <div class="input-group medicineLines">
                                                            <input id="1_medicineOrder_1" class="med_no form-control rounded text-center col-1 p-0" type="number" step="0.25" value="1"/>
                                                            <select name="1_medicineFrequency_1" id="1_medicineFrequency_1" class="col-2 med_freq form-control text-center p-0 rounded">
                                                                <option value="1">Once a day</option>
                                                                <option value="2">Twice a day</option>
                                                                <option value="3">Thrice a day</option>
                                                                <option value="4">Four times a day</option>
                                                                <option value="5">Five times a day</option>
                                                                <option value="6">Others</option>
                                                            </select>
                                                            <input id="1_medicineDuration_1" type="number" step="1" class="col-1 med_duration form-control rounded p-0 text-center"></input>
                                                            <input id="1_medicineSpecial_1" type="textarea" class="col-7 form-control p-0 text-center med_special" placeholder="Special Instructions"></input>
                                                            <div class="p-0 m-0 col-1 btnCell">
                                                                <i class="fa fa-plus fa-sm faPlus" data-id="1"></i>
                                                                <i class="fa fa-minus fa-sm faMinus"></i>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <row>
                                        <button class="btn btn-primary" id="opnewrow">Add More</button>
                                        <button type="button" id="form_submit" class="btn btn-success form_submit">Submit</button>
                                    </row>                                    
                                </div>                                
                                <div class="old_pres_list active" id="old_pres_list">
                                    <h5 class="card-header text-center bg-light">Old Prescriptions</h5>
                                    <div class="card shadow border-light pr-1">
                                        <div class="card-body p-0" id="old_prescriptions">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="old_prescript_modal" tabindex="-1" role="dialog" aria-labelledby="old_presc_header" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 id="pres_date" style="text-align:center"></h5>
                                    </div>
                                    <div class="modal-body">
                                        <div id="oldPrescriptionDetail" class="oldPrescriptionDetail container-flex ">
                                            <div class="oldPrescriptionHeader row bg-light">
                                                <div class="col-1">#</div>
                                                <div class="col-6">Medicine</div>
                                                <div class="col-1">No.</div>
                                                <div class="col-1">Freq.</div>
                                                <div class="col-1">Days</div>
                                                <div class="col-1">Special</div>
                                                <div class="col-1">Total</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="pres_submit btn btn-success">Repeat</button>
                                        <button type="button" id="close" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </body>

                </div>
            </t>
        </template>

        <template id="opweb_assets_frontend" name="opweb_assets" inherit_id="website.assets_frontend">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/opweb/static/src/js/san_ker.js"/>
            </xpath>
        </template>

        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/opweb/static/src/scss/san_ker.scss"/>
            </xpath>
        </template>

    </data>
